  <parent>
    <groupId>de.monticore.sle19</groupId>
    <artifactId>PureFunOof</artifactId>
    <version>1.0.0</version>
  </parent>
  
  <artifactId>PureFun-fe</artifactId>
  
  <build>
    <plugins>
